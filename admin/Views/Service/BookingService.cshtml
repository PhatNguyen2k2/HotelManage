@{
    ViewBag.Title = "Service Page";
}
@section styles{
    <link href="~/Content/styles/listservice.css" rel="stylesheet" type="text/css" />
}



<div class="bigService">

    <div class="serRoom-list">
        <p>Service of room</p>
        <div class="serRoom-table">
            <table class="table ">
                <thead>
                    <tr>
                        <th scope="col">STT</th>
                        <th scope="col" class="col-md-2">Name Service</th>
                        <th scope="col">Amount</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 1;}
                    @foreach (var item in ViewBag.RoomServices)
                {
                    <tr>
                        <th scope="row">@i</th>
                        <td>@item.s_name</td>
                        <td>@item.amount</td>
                        <td>
                            <i class="fas fa-trash fa-white" onclick="document.getElementById('@i-delete').style.display='block'"></i>
                        </td>
                    </tr>
                    <div class="w3-container">
                        <div id="@i-delete" class="w3-modal">
                            <div class="w3-modal-content w3-card-4 w3-animate-zoom" style="position: relative;">
                                <div class="w3-center">
                                    <i class="w3-circle w3-margin-top fas fa-hotel" style="color: #0026ff; font-size: 32px;"></i>
                                </div>
                                <form class="w3-container" action=@Url.Action("DeleteService", "Service", new { id = @item.r_id, name = @item.s_name }) method="post">
                                    <div class="w3-section">
                                        <label style="margin-left: 2%;"><b>Name</b></label>
                                        <input class="w3-input w3-border w3-margin-bottom" style="margin-left:2%; width: 90%;" type="text" value="@item.s_name" name="s_name" readonly>
                                        <label style="margin-left: 2%;"><b>Amount</b></label>
                                        <input class="w3-input w3-border w3-margin-bottom" style="margin-left:2%; width: 90%;" type="number" value="@item.amount" name="amount" readonly>
                                    </div>
                                    <button type="submit" class="btn btn-info" style="margin-left: 2%; margin-bottom: 1%;">Delete</button>
                                </form>
                                <div class="w3-container w3-padding" style=" width: 10%; position: absolute; bottom: 0; right: 6%;">
                                    <button class="btn btn-danger w3-right w3-border"
                                            onclick="document.getElementById('@i-delete').style.display='none'">
                                        Close
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    i++;
                }
                </tbody>
            </table>
        </div>
    </div>


    <div class="service-list w3-panel w3-border-left">
        <p>Service List</p>
        <div class="service-table">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col" class="col-sm-1">STT</th>
                        <th scope="col" class="col-md-2">Name Service</th>
                        <th scope="col" class="col-md-2">Employee</th>
                        <th scope="col" class="col-md-2">Price</th>
                        <th scope="col" class="col-md-2">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @{int j = 1;}
                    @foreach (var item in ViewBag.Services)
                 {
                    <tr>
                        <th scope="row">@j</th>
                        <td>@item.s_name</td>
                        <td>@item.e_id</td>
                        <td>@item.price</td>
                        <td><i class="fas fa-circle-plus" onclick="document.getElementById('@j-add').style.display='block'"></i></td>
                    </tr>

                    <div class="w3-container">
                        <div id="@j-add" class="w3-modal">
                            <div class="w3-modal-content w3-card-4 w3-animate-zoom" style="position: relative;">
                                <div class="w3-center">
                                    <i class="w3-circle w3-margin-top fas fa-hotel" style="color: #0026ff; font-size: 32px;"></i>
                                </div>
                                <form class="w3-container" action=@Url.Action("AddService", "Service", new { id = @Url.RequestContext.RouteData.Values["id"], name = item.s_name }) method="post">
                                    <div class="w3-section">
                                        <label style="margin-left: 2%;"><b>Amount</b></label>
                                        <input class="w3-input w3-border w3-margin-bottom" style="margin-left:2%; width: 90%;" type="number" placeholder="EnterAmount" name="amount" min="1" required>
                                    </div>
                                    <button type="submit" class="btn btn-info" style="margin-left: 2%; margin-bottom: 1%;">Save</button>
                                </form>
                                <div class="w3-container w3-padding" style=" width: 10%; position: absolute; bottom: 0; right: 6%;">
                                    <button class="btn btn-danger w3-right w3-border"
                                            onclick="document.getElementById('@j-add').style.display='none'">
                                        Close
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                        j++;
                 }
                </tbody>
            </table>
        </div>
    </div>

</div>
<div style="margin-top: 310px"></div>
<p style="text-align: center; font-size: 20px">&copy; 2023 team 1</p>