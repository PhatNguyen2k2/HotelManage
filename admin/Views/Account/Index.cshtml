@{
    ViewBag.Title = "Manage Account Page";
}

@section styles{
    <link href="~/Content/styles/Booking.css" rel="stylesheet" type="text/css" />
}

<div class="container-fluid btnSearch">
    <form class="d-flex" role="search" action=@Url.Action("Search", "Account") method="post">
        <input class="form-control me-2" type="search" placeholder="Search" name="search" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
    <button onclick="document.getElementById('id01').style.display='block'" class="btn btn-success" style="margin-top: 1%">Add Account</button>
</div>

@*thêm thông tin*@
<div class="w3-container big-addCus">


    <div id="id01" class="w3-modal">
        <div class="w3-modal-content w3-card-4 w3-animate-zoom" style="position: relative;">
            <div class="w3-center">
                <i class="w3-circle w3-margin-top fa-solid fa-users" style="color: #0026ff; font-size: 32px;"></i>
            </div>
            <form class="w3-container" action="create" method="post">
                <div class="w3-section">

                    <label><b>Username</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="Enter UserName" name="username" required>
                    <label><b>Password</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="password" placeholder="Enter password" name="password" required>
                    <label style="padding-right: 1%; margin-bottom: 2%"><b>Position</b></label>
                    <input type="radio" id="admin" name="position" value="admin">
                    <label for="admin">Admin</label>
                    <input type="radio" id="employee" name="position" value="emp">
                    <label for="employee">Employee</label> </br>
                    <label><b>Question 1: What's your hobbies ?</b></label>
                    <textarea class="w3-input w3-border w3-margin-bottom" name="answer1" required></textarea>
                    <label><b>Question 2: What's position do you want ?</b></label>
                    <textarea class="w3-input w3-border w3-margin-bottom" name="answer2" required></textarea>

                </div>
                <button type="submit" class="btn btn-info" style="margin-bottom: 1%;">Save</button>
            </form>

            <div class="w3-container w3-padding" style=" width: 10%; position: absolute; bottom: 0; right: 0;">
                <button class="btn btn-danger w3-right w3-border"
                        onclick="document.getElementById('id01').style.display='none'">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>


<div class="room-list">
    <p>Account List</p>
    <div class="room-table">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">STT</th>
                    <th scope="col">Username</th>
                    <th scope="col">Password</th>
                    <th scope="col">Position</th>
                    <th scope="col" class="col-lg-2">Action</th>

                </tr>
            </thead>
            <tbody>


                @{int i = 1;}
                @foreach (var item in ViewBag.Accounts)
                    {
                <tr>
                    <th scope="row">@i</th>
                    <td>@item.username</td>
                    <td style="-webkit-text-security: disc;">@item.password</td>
                    <td>@item.position</td>
                    <td>
                        <i class="fas fa-trash fa-white" onclick="document.getElementById('@i-delete').style.display='block'"></i>
                    </td>
                </tr>

                @*Xóa thông tin Khách*@
                <div class="w3-container">
                    <div id="@i-delete" class="w3-modal">
                        <div class="w3-modal-content w3-card-4 w3-animate-zoom" style="position: relative;">
                            <div class="w3-center">
                                <i class="w3-circle w3-margin-top fa-solid fa-users" style="color: #0026ff; font-size: 32px;"></i>
                            </div>
                            <form class="w3-container" action=@Url.Action("DeleteAccount", "Account", new { name = @item.username}) method="post">
                                <div class="w3-section">
                                    <label style="margin-left: 2%;"><b>Username</b></label>
                                    <input class="w3-input w3-border w3-margin-bottom" style="margin-left:2%; width: 90%;" type="text" value="@item.username" name="username" readonly>
                                    <label style="margin-left: 2%;"><b>Password</b></label>
                                    <input class="w3-input w3-border w3-margin-bottom" style="margin-left:2%; width: 90%;" type="password" value="@item.password" name="password" readonly>
                                    <label style="margin-left: 2%;"><b>Position</b></label>
                                    <input class="w3-input w3-border w3-margin-bottom" style="margin-left:2%; width: 90%;" type="position" value="@item.position" name="position" readonly>
                                </div>
                                <button type="submit" class="btn btn-info" style="margin-left: 2%; margin-bottom: 1%;">Delete</button>
                            </form>
                            <div class="w3-container w3-padding" style=" width: 10%; position: absolute; bottom: 0; right: 6%;">
                                <button class="btn btn-danger w3-right w3-border"
                                        onclick="document.getElementById('@i-delete').style.display='none'">
                                    Close
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                 i++;
               }
            </tbody>
        </table>
    </div>
</div>
<div style="margin-top: 423px"></div>
<p style="text-align: center; font-size: 20px">&copy; 2023 team 1</p>
