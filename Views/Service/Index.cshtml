@{
    ViewBag.Title = "List Room Service Page";
}
@section styles{
    <link href="~/Content/styles/Booking.css" rel="stylesheet" type="text/css" />
}


<div class="container-fluid btnSearch">
    <form class="d-flex" role="search" action=@Url.Action("SearchRoom", "Service") method="post">
        <input class="form-control me-2" type="search" placeholder="Search" name="search" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
</div>

<div class="room-list">
    <p>Room List</p>
    <div class="room-table">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">STT</th>
                    <th scope="col" class="col-md-2">ID</th>
                    <th scope="col">Type</th>
                    <th scope="col" class="col-md-2">Price</th>
                    <th scope="col" class="col-lg-2">Status</th>
                    <th scope="col" class="col-lg-2">Action</th>
                </tr>
            </thead>
            <tbody>
                @{int i = 1;}
                @foreach (var item in ViewBag.Rooms)
                    {
                <tr>
                    <th scope="row">@i</th>
                    <td>@item.id</td>
                    <td>@item.r_name</td>
                    <td>@item.price</td>
                    <td>@item.status</td>
                    <td>
                        <a href="@Url.Action("BookingService", "Service", new { id = item.id })">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                    </td>
                </tr>
                        i++;
                    }
            </tbody>
        </table>
    </div>
</div>
<div style="margin-top: 387px"></div>
<p style="text-align: center; font-size: 20px">&copy; 2023 team 1</p>