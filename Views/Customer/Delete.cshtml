@model HotelManage.Models.Customer

@section styles{
    <link href="~/Content/styles/deletebooking.css" rel="stylesheet" type="text/css" />
}
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="alertDlt">
    <p class="titleDlt">Delete</p>
    <hr />
    <p>Are you sure you want to delete this?</p>
</div>

<div class="big-table">

    <table class="table info-table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col">Address</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(model => model.id)</td>
                <td>@Html.DisplayFor(model => model.c_name)</td>
                <td>@Html.DisplayFor(model => model.email)</td>
                <td>@Html.DisplayFor(model => model.phone)</td>
                <td>@Html.DisplayFor(model => model.c_address)</td>
            </tr>
        </tbody>
    </table>
    @using (Html.BeginForm())
    {
    @Html.AntiForgeryToken()

    <div class="form-actions no-color btn-dlt">
        <input type="submit" value="Delete Customer" />
        <a href="@Url.Action("Index", "Customer")">Back to List</a>
    </div>
    }

</div>
